# ============================================================================
# VitalWatch - Configuración de Ejemplo
# ============================================================================
# INSTRUCCIONES:
# 1. Copia este archivo como "application.properties"
# 2. Reemplaza los valores de ejemplo con tus credenciales reales
# ============================================================================

# Perfil activo (dev, prod)
spring.profiles.active=dev

# ============================================================================
# ORACLE CLOUD DATABASE
# ============================================================================

# URL de conexión a Oracle Autonomous Database
spring.datasource.url=jdbc:oracle:thin:@(DESCRIPTION=(ADDRESS=(PROTOCOL=TCPS)(HOST=adb.sa-santiago-1.oraclecloud.com)(PORT=1522))(CONNECT_DATA=(SERVICE_NAME=TU_SERVICE_NAME_high.adb.oraclecloud.com))(SECURITY=(SSL_SERVER_DN_MATCH=YES)))

# Credenciales de la base de datos
spring.datasource.username=ADMIN
spring.datasource.password=TU_PASSWORD_AQUI

# Driver de Oracle
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver

# ============================================================================
# JPA / HIBERNATE
# ============================================================================

# DDL: none (usar scripts SQL)
spring.jpa.hibernate.ddl-auto=none

# Mostrar SQL (solo desarrollo)
spring.jpa.show-sql=false

# Dialecto de Oracle
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.OracleDialect

# Formato del SQL
spring.jpa.properties.hibernate.format_sql=true

# ============================================================================
# SERVIDOR
# ============================================================================

# Puerto del servidor
server.port=8080

# Context path
server.servlet.context-path=/

# ============================================================================
# LOGGING
# ============================================================================

# Nivel de log general
logging.level.root=INFO

# Log de la aplicación
logging.level.com.hospital.vitalwatch=INFO

# Log de SQL (descomentar para debug)
# logging.level.org.hibernate.SQL=DEBUG
# logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# ============================================================================
# ACTUATOR
# ============================================================================

# Endpoints de management
management.endpoints.web.exposure.include=health,info

# Health check con detalles
management.endpoint.health.show-details=always

# ============================================================================
# SPRING DOC (SWAGGER)
# ============================================================================

# Swagger UI
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.api-docs.path=/v3/api-docs

# ============================================================================
# CONFIGURACIÓN ADICIONAL
# ============================================================================

# Nombre de la aplicación
spring.application.name=VitalWatch

# Timezone
spring.jpa.properties.hibernate.jdbc.time_zone=America/Santiago
